{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31
    },
    "configurePresets": [
        {
            "name": "configure_debug_gnu",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug_gnu",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "configure_release_gnu",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/release_gnu",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "configure_debug_clang",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug_clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "configure_release_clang",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/release_clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build_debug_gnu",
            "configurePreset": "configure_debug_gnu",
            "jobs": 12
        },
        {
            "name": "build_release_gnu",
            "configurePreset": "configure_release_gnu",
            "jobs": 12
        },
        {
            "name": "build_debug_clang",
            "configurePreset": "configure_debug_clang",
            "jobs": 12
        },
        {
            "name": "build_release_clang",
            "configurePreset": "configure_release_clang",
            "jobs": 12
        }
    ],
    "workflowPresets": [
        {
            "name": "workflow_debug_gnu",
            "steps": [
                {
                    "type": "configure",
                    "name": "configure_debug_gnu"
                },
                {
                    "type": "build",
                    "name": "build_debug_gnu"
                }
            ]
        },
        {
            "name": "workflow_release_gnu",
            "steps": [
                {
                    "type": "configure",
                    "name": "configure_release_gnu"
                },
                {
                    "type": "build",
                    "name": "build_release_gnu"
                }
            ]
        },
        {
            "name": "workflow_debug_clang",
            "steps": [
                {
                    "type": "configure",
                    "name": "configure_debug_clang"
                },
                {
                    "type": "build",
                    "name": "build_debug_clang"
                }
            ]
        },
        {
            "name": "workflow_release_clang",
            "steps": [
                {
                    "type": "configure",
                    "name": "configure_release_clang"
                },
                {
                    "type": "build",
                    "name": "build_release_clang"
                }
            ]
        }
    ]
}
